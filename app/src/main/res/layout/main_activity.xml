<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:text="Switches"
                    android:textColor="#3e4953"
                    android:textSize="20sp" />

                <ToggleButton
                    android:id="@+id/switch_on"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:onClick="Connect_bluetooth"
                    android:padding="15dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="set_mac_id"
                    android:padding="20dp"
                    android:src="@drawable/ic_settings_bluetooth_black_24dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#234567" />

            <Switch
                android:id="@+id/switch_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                android:checked="false"
                android:gravity="center"
                android:text="Switch 1"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switch_2"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Switch 2"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/switch_3"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Switch 3"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/switch_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="center"
                android:text="Switch 4"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/switch_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="center"
                android:text="Switch 5"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/switch_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Switch 6"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/switch_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:text="Switch 7"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/switch_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Switch 8"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>